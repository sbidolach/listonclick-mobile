<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#A3A4A6"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/header_bg"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bn_shopping_list"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/ic_bn_top"
            android:shadowColor="#085C8F"
            android:shadowDx="2.0"
            android:shadowDy="2.0"
            android:shadowRadius="3.0"
            android:text="@string/menu_shopping_list"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_title_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.78"
            android:gravity="center_horizontal"
            android:paddingTop="7dp"
            android:shadowColor="#085C8F"
            android:shadowDx="2.0"
            android:shadowDy="2.0"
            android:shadowRadius="3.0"
            android:text="Tesco"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bn_back"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/ic_bn_top"
            android:shadowColor="#085C8F"
            android:shadowDx="2.0"
            android:shadowDy="2.0"
            android:shadowRadius="3.0"
            android:text="@string/menu_back"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.27"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/org_menu_newsletter"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawableLeft="@drawable/ic_menu_pdf"
            android:text="@string/menu_organization_newsletter"
            android:shadowColor="#FFFFFF"
            android:shadowDx="2.0"
            android:shadowDy="2.0"
            android:shadowRadius="3.0"
            android:textColor="#000000"
            android:textColorHighlight="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/org_menu_promotions"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawableLeft="@drawable/ic_menu_promotion"
            android:text="@string/menu_organization_promotion"
            android:shadowColor="#FFFFFF"
            android:shadowDx="2.0"
            android:shadowDy="2.0"
            android:shadowRadius="3.0"
            android:textColor="#000000"
            android:textColorHighlight="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/org_menu_products"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawableLeft="@drawable/ic_menu_product"
            android:text="@string/menu_organization_product"
            android:shadowColor="#FFFFFF"
            android:shadowDx="2.0"
            android:shadowDy="2.0"
            android:shadowRadius="3.0"
            android:textColor="#000000"
            android:textColorHighlight="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/product_bottom_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/footer_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/products_basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="Items: 12"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/products_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:gravity="right"
            android:text="Total: 46,65 $"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>