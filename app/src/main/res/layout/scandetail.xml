<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#A3A4A6"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/header_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_title_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.78"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingTop="7dp"
            android:shadowColor="#085C8F"
            android:shadowDx="2.0"
            android:shadowDy="2.0"
            android:shadowRadius="3.0"
            android:text="Name of list"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bn_back"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/ic_bn_top"
            android:shadowColor="#085C8F"
            android:shadowDx="2.0"
            android:shadowDy="2.0"
            android:shadowRadius="3.0"
            android:text="@string/menu_back"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="-10dp"
        android:layout_weight="0.70"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingBottom="5dp" >

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/label_product_name"
                android:textColor="#636363"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/productdetail_name_auto"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/inputstyle"
                android:inputType="text"
                android:paddingLeft="3dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="16dp" >

                <requestFocus />
            </AutoCompleteTextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/productimage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/img_no_photo" />

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.32"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/LinearLayout01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:text="@string/label_product_unit"
                            android:textColor="#636363"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/productdetail_unit"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/inputstyle"
                            android:entries="@array/unitArray"
                            android:entryValues="@array/unitValues"
                            android:inputType="numberDecimal"
                            android:paddingLeft="3dp"
                            android:textColor="#000000"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:text="@string/label_product_count"
                            android:textColor="#636363"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/productdetail_count"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="0.34"
                            android:background="@drawable/inputstyle"
                            android:inputType="numberDecimal"
                            android:paddingLeft="3dp"
                            android:textColor="#000000"
                            android:textSize="16dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:text="@string/label_product_value"
                        android:textColor="#636363"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/productdetail_value"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="3dp"
                        android:layout_weight="0.08"
                        android:background="@drawable/inputstyle"
                        android:inputType="numberDecimal"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/label_category"
                        android:textColor="#636363"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/productdetail_category"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/inputstyle"
                        android:paddingLeft="3dp"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/scan_bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/zxing_activity_info" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/product_bottom_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/footer_bg"
        android:orientation="horizontal"
        android:padding="4dp"
        android:gravity="center" >

        <Button
            android:id="@+id/button_productdetail_add"
            android:layout_width="80dp" 
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/button_shop_save"
            android:background="@drawable/ic_bn_top"
            android:shadowColor="#085C8F"
            android:shadowDx="2.0"
            android:shadowDy="2.0"
            android:shadowRadius="3.0"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/button_productdetail_sel"
            android:layout_width="80dp"            
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/button_shop_select"
            android:background="@drawable/ic_bn_top"
            android:shadowColor="#085C8F"
            android:shadowDx="2.0"
            android:shadowDy="2.0"
            android:shadowRadius="3.0"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#000000"
            android:textSize="16dp"
            android:textStyle="bold" 
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/button_productdetail_cancel"
            android:layout_width="80dp" 
            android:layout_height="35dp"
            android:text="@string/button_shop_cancel"
            android:background="@drawable/ic_bn_top"
            android:shadowColor="#085C8F"
            android:shadowDx="2.0"
            android:shadowDy="2.0"
            android:shadowRadius="3.0"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>