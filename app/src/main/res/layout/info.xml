<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:background="#A3A4A6" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/header_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_title_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.78"
            android:gravity="left"
            android:paddingTop="7dp"
            android:shadowColor="#085C8F"
            android:shadowDx="2.0"
            android:shadowDy="2.0"
            android:shadowRadius="3.0"
            android:text="Info"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"
            android:paddingLeft="5dp" />

        <Button
            android:id="@+id/bn_back"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/ic_bn_top"
            android:shadowColor="#085C8F"
            android:shadowDx="2.0"
            android:shadowDy="2.0"
            android:shadowRadius="3.0"
            android:text="@string/menu_back"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textColorHighlight="#000000"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="-10dp"
        android:layout_weight="0.70"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="3dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="91dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_microstep" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.49"
            android:gravity="center"
            android:text="@string/label_info"
            android:textColor="#636363"
            android:textStyle="bold"
            android:padding="10dp" />

        <Button
            android:id="@+id/button_contact_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_contact_form" />

        <Button
            android:id="@+id/button_invite_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_share" />
        
    </LinearLayout>

</LinearLayout>